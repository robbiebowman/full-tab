{
  "manifest_version": 3,
  "name": "Full Tab",
  "version": "1.8.0",
  "description": "Pixel-precise full-tab video. Right-click the icon to toggle Fit (contain/cover). Remembers your choice.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Video Full Tab (toggle)"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}